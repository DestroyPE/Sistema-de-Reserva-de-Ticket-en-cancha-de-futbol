doctype html
html
    head
        title Reserva Centro Deportivo
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        style.
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
            }

            .container {
                max-width: 600px;
                margin: 20px auto;
                padding: 20px;
                background-color: #E6E6FA;
                border-radius: 10px;
            }

            .title {
                text-align: center;
                color: black;
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .image-container {
                text-align: center;
                margin-bottom: 15px;
            }

            .image-container img {
                width: 100%;
                border-radius: 10px;
            }

            .description {
                margin: 15px 0;
                text-align: center;
                font-size: 16px;
                color: #333;
            }

            .location {
                margin: 10px 0;
                font-size: 14px;
                color: #555;
                text-align: center;
            }

            .form-group {
                margin: 15px 0;
            }

            .form-group label {
                font-size: 14px;
                color: #333;
            }

            .form-group input[type="date"] {
                width: 100%;
                padding: 8px;
                border: 2px solid #ccc;
                border-radius: 5px;
                margin-top: 5px;
            }

            .dropdown {
                margin: 15px 0;
                text-align: center;
            }

            select {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border-radius: 5px;
                border: 2px solid #ccc;
            }

            .info-section {
                background-color: #DFFFD6;
                padding: 15px;
                border-radius: 10px;
                text-align: center;
            }

            .cost {
                font-size: 18px;
                color: #333;
            }

            .prohibitions {
                margin-top: 10px;
                font-size: 14px;
                color: #888;
            }

            .reserve-btn {
                display: block;
                width: 100%;
                padding: 10px;
                margin-top: 15px;
                background-color: transparent;
                border: 2px solid #4CAF50;
                color: #4CAF50;
                font-size: 16px;
                border-radius: 20px;
                cursor: pointer;
            }

            .reserve-btn:hover {
                background-color: #4CAF50;
                color: white;
            }

            .total {
                margin-top: 15px;
                text-align: center;
                font-size: 16px;
            }

    body
        .container
            .title Centro Deportivo 1 | MANCO

            .image-container
                img(src="https://via.placeholder.com/600x300", alt="Centro Deportivo")

            .description
                p Cancha de 50m2 de gras sintético

            .location
                p Av. Calle Falsa 123, Breña, Lima

            .form-group
                label(for="fecha") Fecha
                input#fecha(type="date", value="2024-09-27")

            .dropdown
                select
                    option(selected) Horario disponible
                    option 8:00 AM - 9:00 AM
                    option 9:00 AM - 10:00 AM
                    option 10:00 AM - 11:00 AM

            .info-section
                .cost Costo de reserva: s/50 por hora
                .prohibitions No se permite el ingreso de alimentos ni mascotas.

            button.reserve-btn Reservar

            .total Total: 0
