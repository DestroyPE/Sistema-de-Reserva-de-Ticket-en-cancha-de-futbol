doctype html
html
    head
        title Reserva Centro Deportivo
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        style.
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: Arial, sans-serif;
                background-color: #C8C8C8;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }

            .container {
                width: 90%;
                max-width: 1600px;
                height: 90vh; /* Altura total del contenedor principal */
                margin: auto;
                background-color: #E6E6FA;
                border-radius: 10px;
                display: flex;
                flex-direction: column; /* Dirección de los elementos hijos en columna */
            }

            .form-section {
                background-color: #b19cd9; /* Fondo morado */
                flex: 1; /* Ocupa un espacio proporcional */
                padding: 20px;
                border-top-right-radius: 10px;
                border-top-left-radius: 10px;
                text-align: center;
            }

            .title {
                text-align: center;
                color: black;
                font-size: 1.5em;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .form-group {
                text-align: center;
                margin-bottom: 10px;
            }

            .form-group label {
                font-size: 14px;
                color: #333;
                display: block;
                margin-bottom: 5px;
            }

            .form-group select,
            .form-group input[type="text"] {
                width: 250px;
                height:50px;
                padding: 8px;
                font-size: 14px;
                border-radius: 5px;
                margin-top: 5px;
                border: none;
                background-color: #eee;
            }

            .details-container {
                background-color: #fff; /* Fondo blanco */
                flex: 1; /* Ocupa un espacio proporcional */
                padding: 40px; /* Aumenta el padding para más espacio */
                text-align: center;
                display: flex; /* Utiliza Flexbox */
                flex-direction: column; /* Alinea los elementos en columna */
                justify-content: space-between; /* Espacio uniforme entre los elementos */
            }

            .details {
                text-align: center;
                margin: 10px 0;
                font-size: 15px;
                color: #333;
            }

            .time-selection {
                text-align: center;
                font-size: 16px;
                margin: 10px 0;
                color: #555;
                display: flex; /* Utiliza flexbox para alinear los elementos */
                flex-direction: column; /* Alinea en columna */
            }

            .time-selection span {
                margin-top: 5px; /* Espacio entre la etiqueta y el texto seleccionado */
            }

            .date-container {
                background-color: #ccffcc; /* Fondo verde */
                flex: 1; /* Ocupa un espacio proporcional */
                padding: 20px;
                text-align: center;
                display: flex; /* Utiliza Flexbox */
                flex-direction: column; /* Alinea los elementos en columna */
                justify-content: space-between; /* Espacio uniforme entre los elementos */
            }

            .proceed-btn {
                width: 250px;
                padding: 10px;
                margin-top: 15px;
                background-color: rgb(216, 226, 216);
                color: rgb(118, 124, 118);
                border-radius: 20px;
                font-size: 16px;
                border-radius: 20px;
                cursor: pointer;
            }

            .proceed-btn-btn:hover {
                background-color: rgb(140, 150, 140); /* Even darker on hover */
            }

            .total {
                text-align: center;
                margin-bottom: 15px;
                font-size: 1rem;
                font-weight: bold;
            }

            .spinner {
                display: none;
                border: 4px solid rgba(0, 0, 0, 0.1);
                border-left-color: #000;
                border-radius: 50%;
                width: 30px;
                height: 30px;
                animation: spin 1s linear infinite;
                margin: 10px auto;
            }
            @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }
            .result {
                margin-top: 10px;
                font-size: 40px;
                text-align: center;
                font-weight: bold;
            }
    body
        .container
            .form-section
                .title Centro Deportivo #{centroId} Reserva  <!-- Asigna el nombre del centro dinámicamente -->

                .form-group
                    label(for="document-type") Formulario de reserva
                    select#document-type
                        option Tipo de documento
                        option DNI
                        option Pasaporte
                        option Carnet de extranjería

                .form-group
                    label(for="document-number") Número de documento
                    input#document-number(type="text" placeholder="Ingrese su número de documento")

            .details-container
                .spinner#loading-spinner
                .result#dni-result

                .details
                    p Cancha de 50m2 de gras sintético

                .time-selection
                    label Hora seleccionada:
                    span#selected-hours No seleccionada

            .date-container
                .date
                    Fecha Fecha seleccionada: 
                    span#selected-date No seleccionada

                a(href="#" id="proceed") 
                    button.proceed-btn Proceder al Pago

                .total Total: 0.00
        script(src="/js/booking.js")