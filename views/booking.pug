doctype html
html
    head
        title Reserva Centro Deportivo
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        style.
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: Arial, sans-serif;
                height: 100vh;
                background-color: #f0f0f0;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .container {
                width: 100vw;
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                border: 1px solid #333;
                border-radius: 10px;
                background-color: white;
                overflow: hidden;
            }

            .title {
                text-align: center;
                background-color: #b19cd9;
                padding: 20px;
                color: black;
                font-size: 1.5em;
                font-weight: bold;
                flex-shrink: 0;
            }

            .form-group {
                text-align: center;
                background-color: #b19cd9;
                padding: 10px;
                flex-shrink: 0;
            }

            .form-group label {
                font-size: 14px;
                color: #333;
                display: block;
                margin-bottom: 5px;
            }

            .form-group select,
            .form-group input[type="text"] {
                width: 20%; /* Reducido a un 20% del 100% */
                padding: 8px; /* Ajustar el padding para hacerlo más pequeño */
                font-size: 14px; /* Reducir la fuente */
                border-radius: 5px;
                margin-top: 5px;
                border: none;
                background-color: #eee;
            }

            .details {
                text-align: center;
                margin: 10px 0;
                font-size: 18px;
                color: #333;
                padding: 10px;
                flex-grow: 1;
            }

            .time-selection {
                text-align: center;
                font-size: 16px;
                margin: 10px 0;
                color: #555;
            }

            .time-selection span {
                margin: 0 10px;
            }

            .date {
                background-color: #ccffcc;
                padding: 20px;
                text-align: center;
                font-size: 1.5em;
                color: #333;
                flex-shrink: 0;
            }

            .proceed-btn {
                display: block;
                width: 20%;
                margin: 20px auto;
                padding: 10px;
                background-color: transparent;
                border: 2px solid #4CAF50;
                color: #4CAF50;
                font-size: 16px;
                border-radius: 20px;
                cursor: pointer;
                flex-shrink: 0;
            }

            .proceed-btn:hover {
                background-color: #4CAF50;
                color: white;
            }

            .total {
                text-align: center;
                margin-top: 15px;
                font-size: 1.2em;
                font-weight: bold;
                flex-shrink: 0;
            }

    body
        .container
            .title Centro Deportivo 1 Reserva | NEIL

            .form-group
                label(for="document-type") Formulario de reserva
                select#document-type
                    option Tipo de documento
                    option DNI
                    option Pasaporte
                    option Carnet de extranjería

            .form-group
                label(for="document-number") Número de documento
                input#document-number(type="text" placeholder="Ingrese su número de documento")

            .details
                p Cancha de 50m2 de gras sintético

            .time-selection
                label Hora
                span 10:00 AM - 11:00 AM
                span 12:00 AM - 1:00 PM

            .date 27/09/2024

            button.proceed-btn Proceder al Pago

            .total Total: 100.00
