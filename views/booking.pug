doctype html
html
    head
        title Reserva Centro Deportivo
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        style.
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
            }

            .container {
                max-width: 600px;
                margin: 20px auto;
                padding: 20px;
                background-color: #E6E6FA;
                border-radius: 10px;
            }

            .title {
                text-align: center;
                color: black;
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .form-group {
                margin: 15px 0;
                text-align: center;
            }

            .form-group label {
                font-size: 14px;
                color: #333;
                display: block;
                margin-bottom: 5px;
            }

            .form-group select,
            .form-group input[type="text"] {
                width: 80%;
                padding: 10px;
                font-size: 16px;
                border: 2px solid #ccc;
                border-radius: 5px;
                margin-top: 5px;
            }

            .details {
                text-align: center;
                margin: 20px 0;
                font-size: 18px;
                color: #333;
            }

            .time-selection {
                text-align: center;
                font-size: 16px;
                margin: 10px 0;
                color: #555;
            }

            .time-selection span {
                margin: 0 10px;
            }

            .date {
                background-color: #DFFFD6;
                padding: 20px;
                text-align: center;
                border-radius: 10px;
                margin: 20px 0;
                font-size: 18px;
                color: #333;
            }

            .proceed-btn {
                display: block;
                width: 80%;
                margin: 20px auto;
                padding: 10px;
                background-color: transparent;
                border: 2px solid #4CAF50;
                color: #4CAF50;
                font-size: 16px;
                border-radius: 20px;
                cursor: pointer;
            }

            .proceed-btn:hover {
                background-color: #4CAF50;
                color: white;
            }

            .total {
                text-align: center;
                margin-top: 15px;
                font-size: 18px;
                color: #333;
            }

    body
        .container
            .title Centro Deportivo 1 Reserva | NEIL
            
            .form-group
                label(for="document-type") Formulario de reserva
                select#document-type
                    option Tipo de documento
                    option DNI
                    option Pasaporte
                    option Carnet de extranjería

            .form-group
                label(for="document-number") Número de documento
                input#document-number(type="text" placeholder="Ingrese su número de documento")

            .details
                p Cancha de 50m2 de gras sintético

            .time-selection
                label Hora
                span 10:00 AM - 11:00 AM
                span 12:00 AM - 1:00 PM

            .date 27/09/2024

            button.proceed-btn Proceder al Pago

            .total Total: 100.00
